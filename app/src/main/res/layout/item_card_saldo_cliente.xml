<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvProducto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="PRODUCTO"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btnExpand"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/transparent"
                android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
                android:contentDescription="@string/abrir"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:divider="@drawable/divider"
            android:visibility="gone"
            android:id="@+id/llInfoCompleta">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100sp"
                    android:layout_height="match_parent"
                    android:text="CONTRATO:"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textAlignment="textEnd"/>

                <TextView
                    android:id="@+id/tvContrato"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="20dp"
                    android:textAlignment="textEnd"
                    android:text="XXXXXXXXXXXX"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100sp"
                    android:layout_height="match_parent"
                    android:text="MINISTRACIÃ“N:"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textAlignment="textEnd" />

                <TextView
                    android:id="@+id/tvFechaMinistracion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="20dp"
                    android:textAlignment="textEnd"
                    android:text="xx/xx/xxxx"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100sp"
                    android:layout_height="match_parent"
                    android:text="VENCIMIENTO:"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textAlignment="textEnd"/>

                <TextView
                    android:id="@+id/tvFechaVencimiento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="20dp"
                    android:textAlignment="textEnd"
                    android:text="xx/xx/xxxx"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100sp"
                    android:layout_height="match_parent"
                    android:text="TOTAL PAGOS:"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textAlignment="textEnd"/>

                <TextView
                    android:id="@+id/tvTotalPagos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="20dp"
                    android:textAlignment="textEnd"
                    android:text="12"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100sp"
                    android:layout_height="match_parent"
                    android:text="CAPITAL:"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textAlignment="textEnd" />

                <TextView
                    android:id="@+id/tvCapital"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="20dp"
                    android:textAlignment="textEnd"
                    android:text="$ 10000"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100sp"
                    android:layout_height="match_parent"
                    android:text="INTERESES:"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textAlignment="textEnd" />

                <TextView
                    android:id="@+id/tvIntereses"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="20dp"
                    android:textAlignment="textEnd"
                    android:text="$ 10000"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100sp"
                    android:layout_height="match_parent"
                    android:text="SEGURO:"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textAlignment="textEnd"/>

                <TextView
                    android:id="@+id/tvSeguro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="20dp"
                    android:textAlignment="textEnd"
                    android:text="$ 10000"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100sp"
                    android:layout_height="match_parent"
                    android:text="TOTAL:"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textAlignment="textEnd"/>

                <TextView
                    android:id="@+id/tvTotal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="20dp"
                    android:textAlignment="textEnd"
                    android:text="$ 10000"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100sp"
                    android:layout_height="match_parent"
                    android:text="ABONO:"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textAlignment="textEnd"/>

                <TextView
                    android:id="@+id/tvAbono"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="20dp"
                    android:textAlignment="textEnd"
                    android:text="$ 10000"
                    />
            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100sp"
                android:layout_height="match_parent"
                android:text="SALDO:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textAlignment="textEnd" />

            <TextView
                android:id="@+id/tvSaldo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="20dp"
                android:textAlignment="textEnd"
                android:text="$ 10000"
                />
        </LinearLayout>



    </LinearLayout>

</com.google.android.material.card.MaterialCardView>